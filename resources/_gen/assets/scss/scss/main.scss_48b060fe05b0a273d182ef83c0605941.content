*{margin:0;padding:0;box-sizing:border-box}html,body,#app{width:100%;height:100%}#app{display:flex;flex-direction:row;--sidebar-width:220px;--sidebar-collapse-width:60px;--sidebar-hover-color:#2e4bf3}#app .sidebar{width:var(--sidebar-width);min-width:var(--sidebar-width);height:100%;background:#1c1f2c;transition:all .5s ease}#app .sidebar .logo{width:100%;height:60px;background:url(/img/logo-white.png);background-size:100% 100%;background-repeat:no-repeat;background-origin:content-box;padding:0 20px;transition:all .5s ease}#app .sidebar ul.menu{color:#fff;display:flex;flex-direction:column;margin-top:20px;list-style:none;font-size:14px}#app .sidebar ul.menu li{width:100%;min-height:50px}#app .sidebar ul.menu li>div{display:flex;flex-direction:row;justify-content:flex-start;align-items:center;min-height:50px;padding:0 20px;width:100%;height:100%;position:relative}#app .sidebar ul.menu li>div span{transition:all .5s ease}#app .sidebar ul.menu li.active,#app .sidebar ul.menu li:hover{background:#111}#app .sidebar ul.menu li .bx-chevron-down{position:absolute;right:2px}#app .sidebar ul.menu li .bx-chevron-down.active{transform:rotate(-180deg)}#app .sidebar ul.menu li span{transition:all .5s ease}#app .sidebar ul.menu li div i{margin-right:1em}#app .sidebar ul.menu ul.sub-menu{display:none}#app .sidebar ul.menu ul.sub-menu.active{display:block}#app .sidebar ul.menu ul.sub-menu li{list-style:none;display:flex;justify-content:flex-start;align-items:center;padding:0 60px}#app .sidebar ul.menu ul.sub-menu li:hover{background:var(--sidebar-hover-color)}#app .sidebar.collapse{width:var(--sidebar-collapse-width);min-width:var(--sidebar-collapse-width)}#app .sidebar.collapse .logo{background:url(/img/logo.png);background-size:100% 100%;background-repeat:no-repeat;background-origin:content-box;padding:10px}#app .sidebar.collapse ul.menu{position:relative;z-index:999}#app .sidebar.collapse ul.menu li{position:relative}#app .sidebar.collapse ul.menu li div .bx-chevron-down,#app .sidebar.collapse ul.menu li div span{display:none}#app .sidebar.collapse ul.menu li ul.sub-menu{position:absolute;left:62px;top:0;background:#111;width:160px}#app .sidebar.collapse ul.menu li ul.sub-menu li{padding:0 20px}#app .sidebar.collapse ul.menu li ul.sub-menu li:hover{background:var(--sidebar-hover-color)}#app .main{width:100%;height:100%;background:#eee}#app .main .header{width:100%;height:60px;display:flex;justify-content:space-between;align-items:center;padding:0 10px;border-bottom:1px solid #ccc}#app .main .header .bx-menu{font-size:30px}#app .main .content{width:100%;height:calc(100% - 60px)}#app .main .footer{height:0}